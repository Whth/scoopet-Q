{
    "version": "0.6.2",
    "description": "About\nA visual no-code/code-free web crawler/spider易采集：一个可视化浏览器自动化测试/数据采集/爬虫软件，可以无代码图形化的设计和执行爬虫任务。别名：ServiceWrapper面向Web应用的智能化服务封装系统。",
    "homepage": "https://www.easyspider.net/",
    "license": "CC-BY-NC-SA-4.0",
    "architecture": {
        "64bit": {
            "url": "https://ghp.ci/https://github.com/NaiboWang/EasySpider/releases/download/v0.6.2/EasySpider_0.6.2_Windows_x64.7z",
            "hash": "da8928b49efd15cbe86e288bb51ea9a9a2f930d938ed8066046c44b72b31eba2",
            "extract_dir": [
                "EasySpider_Windows_x64"
            ]
        },
        "32bit": {
            "url": "https://ghp.ci/https://github.com/NaiboWang/EasySpider/releases/download/v0.6.2/EasySpider_0.6.2_Windows_x32.7z",
            "hash": "924cfce7374be21e386bc39186fbd25351a5ca82d2d5aacb297a657ea6a6c1d7",
            "extract_dir": [
                "EasySpider_Windows_x32"
            ]
        }
    },
    "bin": [
        [
            "EasySpider.exe",
            "esp"
        ],
        [
            "explorer.exe",
            "espdata",
            "$dir\\Data"
        ]
    ],
    "shortcuts": [
        [
            "EasySpider.exe",
            "EasySpider"
        ]
    ],
    "checkver": {
        "github": "https://github.com/NaiboWang/EasySpider"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://ghp.ci/https://github.com/NaiboWang/EasySpider/releases/download/v$version/EasySpider_$version_Windows_x64.7z"
            },
            "32bit": {
                "url": "https://ghp.ci/https://github.com/NaiboWang/EasySpider/releases/download/v$version/EasySpider_$version_Windows_x32.7z"
            }
        },
        "hash": {
            "url": "$url.sha256"
        }
    },
    "post_install": [
        "$sourceDir = \"$dir\"  # 替换为你的源目录路径",
        "$originalFolders = Get-ChildItem -Path $sourceDir -Directory -Filter *.original",
        "foreach ($folder in $originalFolders) {",
        "  $targetDir = $folder.FullName -replace '\\.original$', ''",
        "  if (-Not (Test-Path -Path $targetDir)) {",
        "    New-Item -ItemType Directory -Path $targetDir | Out-Null",
        "  }",
        "  $files = Get-ChildItem -Path $folder.FullName -File",
        "  foreach ($file in $files) {",
        "    $newFilePath = Join-Path -Path $targetDir -ChildPath $file.Name",
        "    Move-Item -Path $file.FullName -Destination $newFilePath -Force",
        "  }",
        "  Remove-Item -Path $folder.FullName -Recurse -Force",
        "}"
    ],
    "suggest": {
        "bbdown": "bbdown"
    },
    "persist": [
        "user_data",
        "Data",
        "tasks",
        "execution_instances"
    ]
}
